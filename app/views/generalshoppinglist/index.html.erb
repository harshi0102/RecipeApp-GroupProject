<div class="shopping-container text-center">
  <h3 class="text-secondary">Shopping List</h3>
  <%= link_to "Home", "/recipes" %>
  <div class="row col-8 offset-2">
    <p class="col-6">
      Amount of food items to buy: <strong><%= @total_count %></strong>
    </p>
    <p class="col-6">
      Total value of food needed: <strong>$<%= @total_price %></strong>
    </p>
  </div>
  <div class="main-container-t">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Food</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @missing_foods.each do |food| %>
          <tr>
            <td><%= food[:name] %></td>
            <td><%= food[:quantity] %><%= food[:measurement] %></td>
            <td>$<%= food[:price] * food[:quantity] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>