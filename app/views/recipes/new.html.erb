<div class="container">
<h1 class="text-center">New Recipe</h1>

<%= form_with model: @recipe, url: recipes_path, class: 'forms', data: { turbo_frame: 'recipes_form' }, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :preparation_time %>
    <%= form.number_field :preparation_time %>
  </div>

  <div>
    <%= form.label :cooking_time %>
    <%= form.number_field :cooking_time %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :public %>
    <%= form.check_box :public %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back to Recipes List', recipes_path, class: 'back-link' %>
</div>