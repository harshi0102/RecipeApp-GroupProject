<div class="container text-center">
  <h3 class="text-secondary">Shopping List</h3>
  <%= link_to "Home", "/recipes", class: "mb-3" %>
  <div class="row justify-content-center">
    <p class="col-md-6">Amount of food items to buy: <strong><%= @total_count %></strong></p>
    <p class="col-md-6">Total value of food needed: <strong>$<%= @total_price %></strong></p>
  </div>
  <table class="table table-striped table-hover mt-5">
    <tr>
      <th class="text-info">Food</th>
      <th class="text-info">Quantity</th>
      <th class="text-info">Price</th>
    </tr>
    <% @missing_foods.each do |food| %>
      <tr>
        <td><%= food[:name] %></td>
        <td><%= food[:quantity] %></td>
        <td>$ <%= food[:price] %></td>
      </tr>
    <% end %>
  </table>
</div>
